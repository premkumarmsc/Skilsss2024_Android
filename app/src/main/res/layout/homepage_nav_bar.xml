<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/homepage_top_bg_image">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginStart="15dp">

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:layout_marginTop="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/profile_image"
                                            app:civ_border_color="#FF000000" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:text="Kiran Prasat"
                                                android:textColor="@color/white"
                                                android:textSize="15dp"/>


                                        </RelativeLayout>
                                    </RelativeLayout>

                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:id="@+id/chat_btn_homepage"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_marginStart="5dp"
                                            android:background="@drawable/message" />

                                        <RelativeLayout
                                            android:id="@+id/settings_btn_homepage"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:layout_marginStart="15dp"
                                            android:background="@drawable/setings_boder_icon">

                                            <ImageView
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:layout_centerInParent="true"

                                                android:src="@drawable/settings_center_icon" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/nptification_btn_homepage"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:layout_marginStart="15dp">

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:src="@drawable/notification_icon" />

                                        </RelativeLayout>


                                    </LinearLayout>

<!--                                    <RelativeLayout-->
<!--                                        android:layout_width="25dp"-->
<!--                                        android:layout_height="25dp"-->
<!--                                        android:layout_marginTop="12dp"-->
<!--                                        android:background="@drawable/chat_icon" />-->

                                </RelativeLayout>

                            </RelativeLayout>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                            <com.synnapps.carouselview.CarouselView
                                android:id="@+id/carousalview_mainpage"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                app:fillColor="@color/white"
                                app:pageColor="@color/white"
                                app:radius="10dp"
                                app:slideInterval="3000"
                                app:strokeColor="@color/white"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="30dp"
                                app:strokeWidth="1dp" />

                    </RelativeLayout>

                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="-30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/homescreen_fragment_professional"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@color/appcolour"

                        android:elevation="10dp">

                        <TextView
                            android:id="@+id/homepage_textvieww_profectional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/professionals"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/homescreen_fragment_posting"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:elevation="10dp">

                        <TextView
                            android:id="@+id/homepage_textvieww_posting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/postings"
                            android:textColor="@color/appcolour" />

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>