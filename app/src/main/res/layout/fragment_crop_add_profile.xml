<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.CropFragment.FragmentCropAddProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/main_frag_picture_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/add_pic_image" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </LinearLayout>

                        <!--                                <LinearLayout-->
                        <!--                                    android:layout_width="match_parent"-->
                        <!--                                    android:layout_height="match_parent"-->
                        <!--                                    android:layout_marginLeft="20dp"-->
                        <!--                                    android:layout_marginTop="40dp"-->
                        <!--                                    android:layout_weight="1">-->

                        <!--                                    <RelativeLayout-->
                        <!--                                        android:layout_width="match_parent"-->
                        <!--                                        android:layout_height="match_parent">-->

                        <!--                                        <ImageView-->
                        <!--                                            android:id="@+id/img_select"-->
                        <!--                                            android:layout_width="35dp"-->
                        <!--                                            android:layout_height="35dp"-->
                        <!--                                            android:layout_centerVertical="true"-->
                        <!--                                            android:padding="5dp"-->
                        <!--                                            android:src="@drawable/add_icon" />-->

                        <!--                                    </RelativeLayout>-->
                        <!--                                </LinearLayout>-->
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/h1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="@string/edi_firstname" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/curve_edit_profile">

                                <EditText
                                    android:id="@+id/enter_your_first_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:inputType="textCapWords"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:hint="@string/enterFirstName"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/edi_lastname" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <EditText
                                    android:id="@+id/enter_your_last_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:inputType="textCapWords"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:hint="@string/enterLastName"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/h3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/edi_company" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <EditText
                                    android:id="@+id/enter_your_company_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:inputType="textCapWords"
                                    android:background="@color/white"
                                    android:hint="@string/companyName"
                                    android:textSize="15sp" />

                            </RelativeLayout>


                            <TextView
                                android:id="@+id/h4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/edi_email" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <EditText
                                    android:id="@+id/enter_your_email_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:hint="@string/emailID"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/h5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/password" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <EditText
                                    android:id="@+id/enter_your_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:hint="@string/password"
                                    android:inputType="textPassword"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/code_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/h6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/referral_code" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="13dp"
                                    android:background="@drawable/curve_edit_profile">

                                    <EditText
                                        android:id="@+id/edi_code"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@color/white"
                                        android:hint="@string/referral_code"
                                        android:inputType="textPassword"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/h7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/edi_add" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <TextView
                                    android:id="@+id/enter_your_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="50dp"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:hint="@string/address"
                                    android:textSize="15sp" />

                                <ImageView
                                    android:id="@+id/livelocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/ic_baseline_add_location_alt" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp">

                                <TextView
                                    android:id="@+id/or"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="@string/or"
                                    android:textSize="17sp" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/profilepage_add_country"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <TextView
                                    android:id="@+id/a_p_s_tv2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/white"
                                    android:text="@string/country_optional"
                                    android:textSize="15sp" />

                                <ImageView

                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/arrow_selest_icon"
                                    android:tint="@color/gray" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/profilepage_add_state"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <TextView
                                    android:id="@+id/a_p_s_tv3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/white"
                                    android:text="@string/state_optional"
                                    android:textSize="15sp" />

                                <ImageView

                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/arrow_selest_icon"
                                    android:tint="@color/gray" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/profilepage_add_district"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <TextView
                                    android:id="@+id/a_p_s_tv4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/white"
                                    android:text="@string/city"
                                    android:textSize="15sp" />

                                <ImageView

                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/arrow_selest_icon"
                                    android:tint="@color/gray">

                                </ImageView>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/h8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/edi_certificate" />

                            <RelativeLayout
                                android:id="@+id/relative_add_certification"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <TextView
                                    android:id="@+id/a_p_s_tv5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:hint="@string/certification" />

                                <RelativeLayout

                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="15dp"
                                    android:background="@drawable/selectbtn_bg_round">

                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/select_btn_icon" />
                                </RelativeLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/h9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/edi_discription" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/curve_edit_profile">

                                <EditText

                                    android:id="@+id/enter_your_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:hint="@string/profileDescription"
                                    android:inputType="textCapSentences|textMultiLine"
                                    android:textSize="15sp" />

                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/edit_bottom_bg"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/update_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bg_blue"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:id="@+id/a_p_s_tv6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/next"
                                android:textColor="@color/white" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/update_back_icon" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>