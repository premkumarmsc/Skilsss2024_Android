<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingClass">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp" >

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="3dp"
                        android:id="@+id/back_btn"
                        android:layout_width="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/new_back_icon"/>

                    </androidx.cardview.widget.CardView>

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorEnabled="false"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="5"
                        app:sliderStartAutoCycle="true" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="end"
                    android:id="@+id/add_fav"
                    android:layout_marginTop="-38dp"
                    android:layout_marginEnd="30dp"
                    android:layout_width="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#435BDE"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/fav"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:src="@drawable/like" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_title"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pd3"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skills"/>

                        <TextView
                            android:id="@+id/txt_skills"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pd2"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edi_discription"/>

                        <TextView
                            android:id="@+id/txt_descripition"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="44dp"
            app:cardBackgroundColor="#EEF0F2"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/linear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proff_image"
                    android:scaleType="fitXY"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/pd4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:text="@string/posted_by"/>
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="#0F2542"
                        android:text="Michael Orlando"/>


                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="49dp"
            android:layout_marginStart="20dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                   android:id="@+id/post_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#0F2542"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/txt_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="June 22 7:00 Pm"
                    android:textColor="#0F2542"
                    android:textSize="15sp"/>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/chat_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_blue"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:layout_marginEnd="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/pd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/chat_new" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
