<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skils" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/appcolour</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/purple_200</item>
    </style>

    <style name="MyToolBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>


    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_button</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_button</item>
        <item name="android:indeterminateDrawable">@drawable/rating_button</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxHeight">23dp</item>
    </style>
    <style name="pagebg" parent="Theme.Skils">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="view10dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>

    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="flat_button" parent="Theme.Skils">
        <item name="android:background">@drawable/bottom_center</item></style>
    <style name="DialoAnimasion">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme.Skils.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10dp</item>
    </style>


    <style name="Theme.Skils.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Skils.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/appcolour</item>
    </style>
</resources>